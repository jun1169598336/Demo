
@{
    Layout = null;
}

@section styles{
    <style>
        #loading {
            display: none;
            width: 100%;
            height: 100%;
            opacity: 0.4;
            filter: alpha(opacity=40);
            background: white;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2000;
        }
    </style>
    <link href="~/css/paging.css" rel="stylesheet" />
}
<section class="content">

    <div class="row">
        <table id="ListTb" class="table table-bordered">
            <tr>
                <th>员工编号</th>
                <th>员工姓名</th>
                <th>性别</th>
                <th>年龄</th>
            </tr>
        </table>
        <div class="pagebox" style="height:30px;" id="box"></div>
        <script id="dataList" type="text/x-jquery-tmpl">
            {{each  Data}}
            <tr>
                <td>${typeId}</td>
                <td>${typeName}</td>
                <td>${typeHarm}</td>
                <td>${typeWay}</td>

            </tr>
            {{/each}}
        </script>
    </div>

</section>
@section scripts{
    <script src="~/jquery-2.1.1.min.js"></script>
    <script src="~/scripts/jquery.tmpl.js"></script>
    <script src="~/scripts/paging.js"></script>
    <script type="text/javascript" charset="utf-8">
        var _ = {
            MasterData: {},
            options: {
                "url": "/Home/QueryPageData",
                "data": { "PageIndex": 0, "PageSize": 2 },
                "type": "post",
                "datatype": "json"
            },
            render: function (data) {
                $("#ListTb tr:gt(0)").remove();
                $("#dataList").tmpl(data).appendTo('#ListTb');
            },
            getQueryString: function (name) {
                var reg = new RegExp('(?:(?:&|\\?)' + name + '=([^&]*))|(?:/' + name + '/([^/]*))', 'i');
                var r = window.location.href.match(reg);
                if (r != null)
                    return decodeURI(r[1] || r[2]);
                return null;
            },
            ajaxData: function (options, callback) {
                $.ajax({
                    url: options.url,
                    data: options.data,
                    type: options.type,
                    dataType: options.dataType,
                    beforeSend: function () {
                        $("#loading").show();
                    },
                    success: function (survey) {
                        callback(survey);
                    },
                    complete: function () {
                        $("#loading").hide();
                    }
                })
            }
        };
        $(document).ready(function () {
            _.ajaxData(_.options, function (result) {
                _.render(result);
                var setTotalCount = result.Total;
                $('#box').paging({
                    initPageNo: 1, // 初始页码
                    totalPages: result.TotalPages, //总页数
                    totalCount: '合计' + setTotalCount + '条数据', // 条目总数
                    slideSpeed: 600, // 缓动速度。单位毫秒
                    jump: true, //是否支持跳转
                    callback: function (page) {
                        //回调函数
                        //alert(page);
                        _.options.data.PageIndex = page;
                        _.ajaxData(_.options, function (result) {
                            _.render(result);
                        });
                    }
                })
            });
        })
    </script>
}
