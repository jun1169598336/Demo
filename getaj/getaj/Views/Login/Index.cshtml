
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/jquery-2.1.1.min.js"></script>
    <script src="~/layui/layui.js"></script>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
</head>
<body style=" margin:0 auto; width:400px" >

    <table class="layui-table" lay-even="" lay-skin="nob">
        <tr>
            <td colspan="2">

                    用户登陆

            </td>
        </tr>
        <tr>
            <td>用户名</td>
            <td>
                <input id="Text1" type="text" />
            </td>
        </tr>
        <tr>
            <td>密码</td>
            <td>
                <input id="Text2" type="text" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input class="layui-btn layui-btn-normal" id="Button1" type="button" value="button" />
            </td>
        </tr>

    
    <script>
        $(document).ready(function () {
            $("#Button1").click(function () {
                var name = $("#Text1").val();
                var pwd = $("#Text2").val();
                $.ajax({
                    url: "/Login/LoginIn",
                    type: "post",
                    data: { "name": name, "pwd": pwd },
                    dateType: "json",
                    success: function (jsonResult) {
                        if (jsonResult.state == "200") {
                            //    $.cookie('data', JSON.stringify(jsonResult));
                            if (name == "张三")
                                window.location.href = "/shitu/Index";
                            else

                                window.location.href = "/shitu/Index1";

                        } else {
                            alert("用户名或密码错误");
                        }
                    }
                })
            })
        })
    </script>
</body>
</html>
